<div class="body" style="padding-top: 20px;">
<div style="text-align: center;">
  <%= image_tag("/assets/images/garuda.png", height: '120', width: '120') %>
</div>
<h3 style="text-align: center;">Rekapitulasi Legalisasi Ijazah</h3>
<div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Aplikan</th>
        <th>Universitas</th>
        <th>Pejabat</th>
        <th colspan="3">Status</th>
      </tr>
    </thead>
    <tbody>
    <% if @graduation_doc_certificates.count > 0 then %>
      <% @graduation_doc_certificates.each do |doc| %>
      <tr>
        <td><%= doc.doc_applicant %></td>
        <td><%= doc.doc_university %></td>
        <td><%= doc.authorized_signer_name + " (" + doc.authorized_signer_post + ")" %></td>
        <td><%= link_to graduation_doc_certificate_path(doc) + ".pdf", target: "_blank" do %>
                                <span class="glyphicon glyphicon-file"></span>
                                <span class="glyphicon-class">Print</span>
            <% end %></td>
        <td>|&nbsp;<%= link_to edit_graduation_doc_certificate_path(doc) do %>
                                <span class="glyphicon glyphicon-pencil"></span>
                                <span class="glyphicon-class">Edit</span>
            <% end %></td>
        <td>|&nbsp;<%= link_to doc, method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <span class="glyphicon glyphicon-trash"></span>
                                <span class="glyphicon-class">Delete</span>
            <% end %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
    <%= paginate @graduation_doc_certificates %>
</div>

<%= link_to 'Aplikasi Baru', new_graduation_doc_certificate_path, :class => 'btn btn-mini btn-primary', :style => 'color: white;' %>
