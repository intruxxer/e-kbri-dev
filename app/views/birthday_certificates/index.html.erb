<div class="body" style="padding-top: 20px;">
<div style="text-align: center;">
  <%= image_tag("/assets/images/garuda.png", height: '120', width: '120') %>
</div>
<h3 style="text-align: center;">Rekapitulasi Akte Lahir</h3>
<div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>No. Registrasi</th>
        <th>Nama Aplikan</th>
        <th>Kota Kelahiran</th>
        <th>Pejabat</th>
        <th colspan="3">Status</th>
      </tr>
    </thead>
    <tbody>
    <% if @birthday_certificates.count > 0 then %>
      <% @birthday_certificates.each do |birth_cert| %>
      <tr>
        <td><%= birth_cert.cert_no %></td>
        <td><%= birth_cert.birth_baby_name %></td>
        <td><%= birth_cert.birth_city %></td>
        <td>
            <%= birth_cert.authorized_signer_name + " (" + birth_cert.authorized_signer_post + ")" %>
        </td>
        <td><%= link_to birthday_certificate_path(birth_cert) + ".pdf", target: "_blank" do %>
                                <span class="glyphicon glyphicon-file"></span>
                                <span class="glyphicon-class">Print</span>
            <% end %></td>
        <td>|&nbsp;<%= link_to edit_birthday_certificate_path(birth_cert) do %>
                                <span class="glyphicon glyphicon-pencil"></span>
                                <span class="glyphicon-class">Edit</span>
            <% end %></td>
        <td>|&nbsp;<%= link_to birth_cert, method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <span class="glyphicon glyphicon-trash"></span>
                                <span class="glyphicon-class">Delete</span>
            <% end %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
    <%= paginate @birthday_certificates %>
</div>

<%= link_to 'Aplikasi Baru', new_birthday_certificate_path, :class => 'btn btn-mini btn-primary', :style => 'color: white;' %>

