<div class="body" style="padding-top: 20px;">
      <div style="text-align: center;">
        <%= image_tag("/assets/images/garuda.png", height: '160', width: '160') %>
      </div>

      <% unless @errors.nil? %>
      <h2 style="color:white;background:red;">Pengajuan Gagal. Silahkan cek pesan dibawah ini</h2>
        <div style="padding:4px;color:red;font-size:10pt;">
          <% @errors.each do |fs| %>
            <%= simple_format(fs[0].to_s + " = " + fs[1].to_s + "\n")  %>
          <%end%>
          <br />
          Silahkan Upload File - File anda kembali jika ada.
        </div>
      <%end%>
<%= simple_form_for @marriage_certificate, :method => :post, :html => { :class => "sky-form", :multipart => true } do |f| %>
  <%= f.error_notification %>
  <header>Formulir Surat Keterangan Pernikahan</header>
  <fieldset style="text-align:justify;">
  Silakan isi formulir ini dengan hati-hati dan tuntas. Semua data ditanyakan adalah <b>penting</b> kecuali dinyatakan sebagai 'TIDAK'. Silakan gunakan <b>Karakter Latin</b> dan gunakan <b>Huruf Hangeul khusus untuk Alamat di Korea</b>.
  </fieldset>
  <fieldset>
    <div class="row">
            <section class="col col-3">
              <label class="label">&nbsp;</label>
              <label class="input">
              </label>
            </section>

            <section class="col col-3">
              <label class="label">&nbsp;</label>
              <label class="input">
              </label>
            </section>

            <section class="col col-3">
              <label class="label">Pejabat Penandatangan</label>
              <label class="select">
                <%= f.input_field :authorized_signer_name, :required => true,
                collection: { 'Riza Hera Wardhana' => 'Riza Hera Wardhana',
                              'Didik Eko Pujiyanto' => 'Didik Eko Pujiyanto'
                              } %>
              <i></i>
              </label>
            </section>

            <section class="col col-3">
              <label class="label">Jabatan</label>
              <label class="select">
                <%= f.input_field :authorized_signer_post, :required => true,
                collection: { 'Minister' => 'Minister',
                              'Minister Counsellor' => 'Minister Counsellor',
                              'First Secretary' => 'First Secretary',
                              'Second Secretary' => 'Second Secretary',
                              'Third Secretary' => 'Third Secretary'
                              } %>
              <i></i>
              </label>
            </section>
    </div>
    <div class="row">
            <section class="col col-3">
              <label class="label">Penerbit Catatan Pernikahan</label>
              <label class="input">
              <%= f.input_field :cert_issuer, :required => true, :maxlength => 30  %>
              <i></i>
              </label>
            </section>

            <section class="col col-6">
              <label class="label">Alamat Penerbit Catatan Pernikahan</label>
              <label class="textarea textarea-expandable">
                <i class="icon-append icon-comments"></i>
                <%= f.input_field :cert_issuer_address, :required => true,
                                  :row => 10, :maxlength => 100, as: :text %>
              </label>
            </section>

            <section class="col col-3">
              <label class="label">Tanggal Pencatatan Pernikahan</label>
              <label class="input">
                  <i class="icon-append icon-calendar"></i>
                  <%= f.input_field :cert_issued_date, class: 'datePick' %>
              </label>
              <div class="note"><strong>Format : </strong>yyyy/mm/dd</div>
            </section>

            <section class="col col-3">
              <label class="label">No. Registrasi Catatan Pernikahan</label>
              <label class="input">
              <%= f.input_field :cert_reference_date, :required => true, :maxlength => 50  %>
              <i></i>
              </label>
            </section>
    </div>
    <div class="row">
            <section class="col col-3">
              <label class="label">Lokasi Pernikahan</label>
              <label class="input">
              <%= f.input_field :marriage_location, :required => true, :maxlength => 30  %>
              <i></i>
              </label>
            </section>

            <section class="col col-3">
              <label class="label">Tanggal Pernikahan (Huruf)</label>
              <label class="input">
              <%= f.input_field :marriage_day, :required => true, :maxlength => 50  %>
              <i></i>
              </label>
            </section>

            <section class="col col-3">
              <label class="label">Bulan Pernikahan (Huruf)</label>
              <label class="input">
              <%= f.input_field :marriage_month, :required => true, :maxlength => 50  %>
              <i></i>
              </label>
            </section>

            <section class="col col-3">
              <label class="label">Tahun Pernikahan (Huruf)</label>
              <label class="input">
              <%= f.input_field :marriage_year, :required => true, :maxlength => 50  %>
              <i></i>
              </label>
            </section>
    </div>
  </fieldset>
