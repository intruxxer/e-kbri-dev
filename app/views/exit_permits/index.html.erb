<div class="body" style="padding-top: 20px;">
<div style="text-align: center;">
  <%= image_tag("/assets/images/garuda.png", height: '120', width: '120') %>
</div>
<h3 style="text-align: center;">Rekapitulasi Exit Permit Dinas</h3>
<div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>No. Registrasi</th>
        <th>Nama</th>
        <th>No. Paspor</th>
        <th>Pejabat</th>
        <th colspan="3">Status</th>
      </tr>
    </thead>
    <tbody>
    <% if @exit_permits.count > 0 then %>
      <% @exit_permits.each do |exit_permit| %>
      <tr>
        <td><%= exit_permit.permit_no_reg %></td>
        <td><%= exit_permit.grantee_name %></td>
        <td><%= exit_permit.grantee_passport %></td>
        <td>
            <%= exit_permit.authorized_signer_name + " (" + exit_permit.authorized_signer_post + ")" %>
        </td>
        <td><%= link_to exit_permit_path(exit_permit) + ".pdf", target: "_blank" do %>
                                <span class="glyphicon glyphicon-file"></span>
                                <span class="glyphicon-class">Print</span>
            <% end %></td>
        <td>|&nbsp;<%= link_to edit_exit_permit_path(exit_permit) do %>
                                <span class="glyphicon glyphicon-pencil"></span>
                                <span class="glyphicon-class">Edit</span>
            <% end %></td>
        <td>|&nbsp;<%= link_to exit_permit, method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <span class="glyphicon glyphicon-trash"></span>
                                <span class="glyphicon-class">Delete</span>
            <% end %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
    <%= paginate @exit_permits %>
</div>

<%= link_to 'Aplikasi Baru', new_exit_permit_path, :class => 'btn btn-mini btn-primary', :style => 'color: white;' %>
