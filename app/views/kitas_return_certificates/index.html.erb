<div class="body" style="padding-top: 20px;">
<div style="text-align: center;">
  <%= image_tag("/assets/images/garuda.png", height: '120', width: '120') %>
</div>
<h3 style="text-align: center;">Rekap Pengembalian KITAS</h3>
<div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>No. Registrasi</th>
        <th>Aplikan</th>
        <th>No. Paspor</th>
        <th>No. KITAS</th>
        <th>Pejabat</th>
        <th colspan="3">Status</th>
      </tr>
    </thead>
    <tbody>
    <% if @kitas_return_certificates.count > 0 then %>
       <% @kitas_return_certificates.each do |kitas_return| %>
       <tr>
        <td><%= kitas_return.kitas_reg_no %></td>
        <td><%= kitas_return.kitas_holder_name %></td>
        <td><%= kitas_return.kitas_holder_passport %></td>
        <td><%= kitas_return.kitas_issued_no %></td>
        <td>
            <%= kitas_return.authorized_signer_name + " (" + kitas_return.authorized_signer_post + ")" %>
        </td>
        <td><%= link_to kitas_return_certificate_path(kitas_return) + ".pdf", target: "_blank" do %>
                                <span class="glyphicon glyphicon-file"></span>
                                <span class="glyphicon-class">Print</span>
            <% end %></td>
        <td>|&nbsp;<%= link_to edit_kitas_return_certificate_path(kitas_return) do %>
                                <span class="glyphicon glyphicon-pencil"></span>
                                <span class="glyphicon-class">Edit</span>
            <% end %></td>
        <td>|&nbsp;<%= link_to kitas_return, method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <span class="glyphicon glyphicon-trash"></span>
                                <span class="glyphicon-class">Delete</span>
            <% end %></td>
       </tr>
       <% end %>
    <% end %>
    </tbody>
  </table>
    <%= paginate @kitas_return_certificates %>
</div>

<%= link_to 'Aplikasi Baru', new_kitas_return_certificate_path, :class => 'btn btn-mini btn-primary', :style => 'color: white;' %>
