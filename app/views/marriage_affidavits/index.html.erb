<div class="body" style="padding-top: 20px;">
<div style="text-align: center;">
  <%= image_tag("/assets/images/garuda.png", height: '120', width: '120') %>
</div>
<h3 style="text-align: center;">Rekapitulasi Surat Affidavit Marriage</h3>
<div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>No. Registrasi</th>
        <th>Aplikan Pria</th>
        <th>Aplikan Wanita</th>
        <th>Pejabat</th>
        <th colspan="3">Status</th>
      </tr>
    </thead>
    <tbody>
    <% if @marriage_affidavits.count > 0 then %>
      <% @marriage_affidavits.each do |affidavit| %>
      <tr>
        <td><%= affidavit.registration_no %></td>
        <td><%= affidavit.groom_name %></td>
        <td><%= affidavit.bride_name %></td>
        <td>
            <%= affidavit.authorized_signer_name + " (" + affidavit.authorized_signer_post + ")" %>
        </td>
        <td><%= link_to marriage_affidavit_path(affidavit) + ".pdf", target: "_blank" do %>
                                <span class="glyphicon glyphicon-file"></span>
                                <span class="glyphicon-class">Print</span>
            <% end %></td>
        <td>|&nbsp;<%= link_to edit_marriage_affidavit_path(affidavit) do %>
                                <span class="glyphicon glyphicon-pencil"></span>
                                <span class="glyphicon-class">Edit</span>
            <% end %></td>
        <td>|&nbsp;<%= link_to affidavit, method: :delete, data: { confirm: 'Are you sure?' } do %>
                                <span class="glyphicon glyphicon-trash"></span>
                                <span class="glyphicon-class">Delete</span>
            <% end %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
    <%= paginate @marriage_affidavits %>
</div>

<%= link_to 'Aplikasi Baru', new_marriage_affidavit_path, :class => 'btn btn-mini btn-primary', :style => 'color: white;' %>

